<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="5dp"
    tools:context=".SwapMealActivity">

    <Button
        android:id="@+id/potential_meal_1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="64dp"
        android:background="@color/cardview_light_background"
        android:drawableBottom="@drawable/ic_baseline_minimize_24"
        android:text="Meal1"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/potential_meal_2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="64dp"
        android:background="@color/cardview_light_background"
        android:drawableBottom="@drawable/ic_baseline_minimize_24"
        android:text="Meal2"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/potential_meal_1" />

    <Button
        android:id="@+id/potential_meal_3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="64dp"
        android:background="@color/cardview_light_background"
        android:drawableBottom="@drawable/ic_baseline_minimize_24"
        android:text="Meal3"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/potential_meal_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/potential_meal_2"
        app:layout_constraintVertical_bias="0.68" />

    <Button
        android:id="@+id/potential_meal_4"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="64dp"
        android:background="@color/cardview_light_background"
        android:drawableBottom="@drawable/ic_baseline_minimize_24"
        android:text="Meal4"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>